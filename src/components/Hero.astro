---
import HeroSlider from "@components/HeroSlider.tsx";

const slides = [
  {
    src: "/web1.webp",
    alt: "Trasciende Gym — sitio web desarrollado por Nicrosil",
    label: "Trasciende Gym",
    category: "Gym & Fitness",
  },
  {
    src: "/web2.webp",
    alt: "Magical Cleaning — sitio web desarrollado por Nicrosil",
    label: "Magical Cleaning",
    category: "Limpieza Profesional",
  },
];
---

<section
  id="inicio"
  class="flex flex-col items-center bg-gradient-to-b from-[#B8F2FB] to-[#F0FBFC] px-4 pt-4 pb-24 dark:from-[#082028] dark:to-[#060B0D]"
  aria-label="Inicio"
>
  <!-- Badge pill — animación 1 -->
  <div
    class="animate-fade-up mt-24 flex max-w-full items-center justify-center gap-1.5 overflow-hidden rounded-full border border-white/80 bg-white/60 px-3 py-1.5 backdrop-blur-sm sm:gap-2 sm:px-4 dark:border-white/10 dark:bg-zinc-800/60"
  >
    <span
      class="relative flex h-3 w-3 items-center justify-center"
      aria-hidden="true"
    >
      <span
        class="absolute inline-flex h-full w-full animate-ping rounded-full bg-green-400 opacity-75"
      ></span>
      <span
        class="relative inline-flex h-2 w-2 rounded-full bg-green-600 dark:bg-green-400"
      ></span>
    </span>
    <p
      class="text-[11px] font-medium whitespace-nowrap text-zinc-600 sm:text-xs dark:text-zinc-400"
    >
      Desarrollo Web · Oaxaca, México · Alcance Global
    </p>
  </div>

  <!-- H1 — animación 2 -->
  <h1
    class="animate-fade-up mt-8 max-w-2xl text-center text-4xl leading-tight font-semibold tracking-tight text-zinc-800 delay-100 md:text-[3.75rem]/[1.15] dark:text-zinc-50"
  >
    Tu Web,<br />
    <span
      class="bg-gradient-to-r from-cyan-500 to-green-500 bg-clip-text text-transparent dark:from-cyan-400 dark:to-green-400"
    >
      Cultivada con Precisión.
    </span>
  </h1>

  <!-- Subtítulo — animación 3 -->
  <p
    class="animate-fade-up mt-5 max-w-[580px] text-center text-sm leading-relaxed text-zinc-500 delay-200 dark:text-zinc-400"
  >
    Sitios de alto rendimiento construidos con Astro. SEO técnico, velocidad
    máxima y una presencia digital que no para de crecer desde Oaxaca hacia el
    mundo.
  </p>

  <!-- CTAs — animación 4 -->
  <div
    class="animate-fade-up mt-10 flex flex-wrap justify-center gap-3 delay-300"
  >
    <a
      href="#servicios"
      class="rounded-lg bg-cyan-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-cyan-600/25 transition-colors hover:bg-cyan-500 dark:bg-cyan-500 dark:shadow-cyan-500/20 dark:hover:bg-cyan-400"
    >
      Ver servicios
    </a>
    <a
      href="#contacto"
      class="rounded-lg border border-green-400/60 bg-white px-5 py-3 text-sm font-medium text-zinc-600 transition-colors hover:bg-zinc-50 dark:border-green-500/30 dark:bg-zinc-900 dark:text-zinc-300 dark:hover:bg-zinc-800"
    >
      Hablemos →
    </a>
  </div>

  <!-- Slider de portfolio — animación 5 -->
  <div class="animate-fade-up mt-14 w-full max-w-2xl delay-400">
    <!-- Label: mismo estilo pill que el badge superior -->
    <div class="mb-5 flex justify-center">
      <span
        class="rounded-full border border-white/70 bg-white/50 px-4 py-1.5 text-xs font-semibold tracking-widest text-zinc-500 uppercase backdrop-blur-sm dark:border-white/10 dark:bg-zinc-800/50 dark:text-zinc-400"
      >
        Trabajos recientes
      </span>
    </div>

    <HeroSlider slides={slides} client:load />
  </div>
</section>

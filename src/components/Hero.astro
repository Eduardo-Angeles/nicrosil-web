---
import HeroSlider from "@components/HeroSlider.tsx";

const slides = [
  {
    src:      "/web1.webp",
    alt:      "Trasciende Gym — sitio web desarrollado por Nicrosil",
    label:    "Trasciende Gym",
    category: "Gym & Fitness",
  },
  {
    src:      "/web2.webp",
    alt:      "Magical Cleaning — sitio web desarrollado por Nicrosil",
    label:    "Magical Cleaning",
    category: "Limpieza Profesional",
  },
];
---

<section
  id="inicio"
  class="flex flex-col items-center bg-gradient-to-b from-[#C2F5D8] to-[#F4FCF6] px-4 pt-4 pb-24 dark:from-[#0D2015] dark:to-[#070B09]"
  aria-label="Inicio"
>

  <!-- Badge pill — animación 1 -->
  <div class="animate-fade-up mt-24 flex flex-wrap items-center justify-center gap-2 rounded-full border border-white/80 bg-white/60 px-4 py-1.5 backdrop-blur-sm dark:border-white/10 dark:bg-zinc-800/60">
    <span class="relative flex h-3 w-3 items-center justify-center" aria-hidden="true">
      <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-green-400 opacity-75"></span>
      <span class="relative inline-flex h-2 w-2 rounded-full bg-green-600 dark:bg-green-400"></span>
    </span>
    <p class="text-xs font-medium text-zinc-600 dark:text-zinc-400">
      Desarrollo Web · Oaxaca, México · Alcance Global
    </p>
  </div>

  <!-- H1 — animación 2 -->
  <h1
    class="animate-fade-up delay-100 mt-8 max-w-2xl text-center text-4xl font-semibold leading-tight tracking-tight text-zinc-800 dark:text-zinc-50 md:text-[3.75rem]/[1.15]"
  >
    Tu Web,<br />
    <span class="bg-gradient-to-r from-green-600 to-emerald-400 bg-clip-text text-transparent dark:from-green-400 dark:to-emerald-300">
      Cultivada con Precisión.
    </span>
  </h1>

  <!-- Subtítulo — animación 3 -->
  <p
    class="animate-fade-up delay-200 mt-5 max-w-[580px] text-center text-sm leading-relaxed text-zinc-500 dark:text-zinc-400"
  >
    Sitios de alto rendimiento construidos con Astro. SEO técnico, velocidad
    máxima y una presencia digital que no para de crecer desde Oaxaca hacia el mundo.
  </p>

  <!-- CTAs — animación 4 -->
  <div class="animate-fade-up delay-300 mt-10 flex flex-wrap justify-center gap-3">
    <a
      href="#servicios"
      class="rounded-lg bg-green-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-green-600/25 transition-colors hover:bg-green-500 dark:bg-green-500 dark:shadow-green-500/20 dark:hover:bg-green-400"
    >
      Ver servicios
    </a>
    <a
      href="#contacto"
      class="rounded-lg border border-green-400/60 bg-white px-5 py-3 text-sm font-medium text-zinc-600 transition-colors hover:bg-zinc-50 dark:border-green-500/30 dark:bg-zinc-900 dark:text-zinc-300 dark:hover:bg-zinc-800"
    >
      Hablemos →
    </a>
  </div>

  <!-- Slider de portfolio — animación 5 -->
  <div class="animate-fade-up delay-400 mt-14 w-full max-w-2xl">

    <!-- Label: mismo estilo pill que el badge superior -->
    <div class="mb-5 flex justify-center">
      <span class="rounded-full border border-white/70 bg-white/50 px-4 py-1.5 text-xs font-semibold uppercase tracking-widest text-zinc-500 backdrop-blur-sm dark:border-white/10 dark:bg-zinc-800/50 dark:text-zinc-400">
        Trabajos recientes
      </span>
    </div>

    <HeroSlider slides={slides} client:load />

  </div>

</section>

---
/**
 * Para agregar un nuevo cliente:
 * 1. Añade un objeto al array `clients`
 * 2. Proporciona el SVG del logo (o usa un <img> con src)
 * 3. El efecto grayscale → color se aplica automáticamente al hacer hover
 */

const clients = [
  {
    name: "Terrazo MX",
    hint: "Construcción & Materiales",
    svg: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 160 56" fill="none" aria-hidden="true">
      <!-- Hexágono mark -->
      <path d="M28 8 L46 18 L46 38 L28 48 L10 38 L10 18 Z" fill="#1e40af"/>
      <text x="28" y="32" font-family="system-ui,sans-serif" font-size="14" font-weight="700" fill="white" text-anchor="middle">T</text>
      <!-- Wordmark -->
      <text x="58" y="27" font-family="system-ui,sans-serif" font-size="15" font-weight="700" fill="#1e293b" letter-spacing="0.5">TERRAZO</text>
      <text x="58" y="42" font-family="system-ui,sans-serif" font-size="10" font-weight="400" fill="#64748b" letter-spacing="2">MX</text>
    </svg>`,
  },
  {
    name: "Café Atlántica",
    hint: "Restaurante & Hospitalidad",
    svg: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 160 56" fill="none" aria-hidden="true">
      <!-- Cup mark -->
      <rect x="8" y="14" width="32" height="24" rx="4" fill="#b45309"/>
      <path d="M40 20 Q50 20 50 28 Q50 36 40 36" stroke="#b45309" stroke-width="3" fill="none" stroke-linecap="round"/>
      <rect x="8" y="38" width="32" height="4" rx="2" fill="#92400e"/>
      <!-- Steam -->
      <path d="M16 10 Q18 6 16 2" stroke="#b45309" stroke-width="2" fill="none" stroke-linecap="round"/>
      <path d="M24 10 Q26 5 24 1" stroke="#b45309" stroke-width="2" fill="none" stroke-linecap="round"/>
      <!-- Wordmark -->
      <text x="62" y="27" font-family="system-ui,sans-serif" font-size="14" font-weight="700" fill="#1e293b" letter-spacing="0.3">CAFÉ</text>
      <text x="62" y="42" font-family="system-ui,sans-serif" font-size="11" font-weight="600" fill="#64748b" letter-spacing="1.5">ATLÁNTICA</text>
    </svg>`,
  },
  {
    name: "Volanta Digital",
    hint: "Marketing Digital",
    svg: `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 160 56" fill="none" aria-hidden="true">
      <!-- Arrow/V mark en círculo -->
      <circle cx="28" cy="28" r="20" fill="#16a34a"/>
      <path d="M18 22 L28 36 L38 22" stroke="white" stroke-width="3" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
      <!-- Wordmark -->
      <text x="60" y="26" font-family="system-ui,sans-serif" font-size="14" font-weight="700" fill="#1e293b" letter-spacing="0.3">VOLANTA</text>
      <text x="60" y="41" font-family="system-ui,sans-serif" font-size="10" font-weight="500" fill="#64748b" letter-spacing="2">DIGITAL</text>
    </svg>`,
  },
];
---

<section
  class="bg-[#EBF6EF] py-16 dark:bg-[#0C1610]"
  aria-label="Clientes"
>
  <div class="mx-auto max-w-6xl px-6">

    <!-- Encabezado -->
    <p class="mb-10 text-center text-xs font-semibold uppercase tracking-widest text-zinc-400 dark:text-zinc-600">
      Empresas que confían en Nicrosil
    </p>

    <!-- Logos -->
    <div
      class="flex flex-wrap items-center justify-center gap-4 md:gap-0"
      role="list"
    >
      {
        clients.map(({ name, hint, svg }, i) => (
          <div class="flex items-center" role="listitem">

            <!-- Logo -->
            <div
              class="group flex flex-col items-center gap-2 px-10 py-4 transition-all duration-300"
              title={hint}
            >
              <div class="w-36 opacity-40 grayscale transition-all duration-300 group-hover:opacity-100 group-hover:grayscale-0">
                <Fragment set:html={svg} />
              </div>
            </div>

            <!-- Divisor vertical (entre logos, no al final) -->
            {i < clients.length - 1 && (
              <div
                aria-hidden="true"
                class="hidden h-10 w-px bg-zinc-200 dark:bg-zinc-800 md:block"
              />
            )}
          </div>
        ))
      }
    </div>

    <!-- Pie -->
    <p class="mt-8 text-center text-xs text-zinc-400 dark:text-zinc-600">
      y contando&hellip;
    </p>

  </div>
</section>

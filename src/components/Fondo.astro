<svg
  {...Astro.props}
  viewBox="0 0 600 1100"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  class="mx-auto h-auto w-full max-w-3xl"
  role="img"
>
  <title>Jardín Cibernético - Crecimiento Descendente (Mainframe)</title>

  <defs>
    <!-- FILTROS -->
    <filter id="glow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur stdDeviation="3" result="blur"></feGaussianBlur>
      <feMerge>
        <feMergeNode in="blur"></feMergeNode>
        <feMergeNode in="SourceGraphic"></feMergeNode>
      </feMerge>
    </filter>

    <!-- GRADIENTE INVERTIDO (De arriba hacia abajo) -->
    <linearGradient id="vineGrad" x1="0" y1="0" x2="0" y2="1">
      <stop offset="0%" stop-color="#059669"></stop>
      <!-- emerald-600 -->
      <stop offset="50%" stop-color="#10b981"></stop>
      <!-- emerald-500 -->
      <stop offset="100%" stop-color="#34d399"></stop>
      <!-- emerald-400 -->
    </linearGradient>

    <!-- 1. COMPONENTES GEOMÉTRICOS -->
    <polygon
      id="hex"
      points="0,-25 21.65,-12.5 21.65,12.5 0,25 -21.65,12.5 -21.65,-12.5"
      fill="none"></polygon>
    <polygon
      id="hex-filled"
      points="0,-25 21.65,-12.5 21.65,12.5 0,25 -21.65,12.5 -21.65,-12.5"
      fill="currentColor"></polygon>

    <g id="hex-node">
      <use
        href="#hex"
        stroke-width="1.5"
        class="text-emerald-500/40"
        stroke="currentColor"></use>
      <use
        href="#hex"
        transform="scale(0.7)"
        stroke-width="0.75"
        class="text-emerald-400/60"
        stroke="currentColor"></use>
      <circle
        cx="0"
        cy="0"
        r="4"
        class="text-emerald-300"
        fill="currentColor"
        filter="url(#glow)"></circle>
      <circle cx="0" cy="0" r="1.5" class="text-white" fill="currentColor"
      ></circle>
      <path
        d="M0,-17 L0,-25 M15,-8 L21.65,-12.5 M15,8 L21.65,12.5 M0,17 L0,25 M-15,8 L-21.65,12.5 M-15,-8 L-21.65,-12.5"
        stroke="currentColor"
        stroke-width="0.5"
        class="text-emerald-400/50"></path>
    </g>

    <!-- 2. NUEVO: MICROCHIPS (Sustituto de las suculentas) -->
    <g id="data-core" stroke="currentColor" class="text-emerald-400">
      <!-- Cuerpo del chip -->
      <rect
        x="-20"
        y="-30"
        width="40"
        height="60"
        rx="2"
        fill="#022c22"
        fill-opacity="0.9"
        stroke-width="1.5"></rect>
      <!-- Pines de conexión -->
      <path
        d="M-20,-20 h-5 M-20,-10 h-5 M-20,0 h-5 M-20,10 h-5 M-20,20 h-5"
        stroke-width="1.5"
        class="text-emerald-500"></path>
      <path
        d="M20,-20 h5 M20,-10 h5 M20,0 h5 M20,10 h5 M20,20 h5"
        stroke-width="1.5"
        class="text-emerald-500"></path>
      <!-- Circuitos internos del procesador -->
      <path
        d="M-10,-20 L0,-10 V20 M-10,10 L0,0 M10,-20 V-5 L5,0 M10,15 L5,10"
        fill="none"
        stroke-width="1"
        class="text-emerald-300/60"></path>
      <!-- Núcleo brillante -->
      <rect
        x="-6"
        y="-6"
        width="12"
        height="12"
        rx="1"
        fill="currentColor"
        class="text-emerald-500/20"
        stroke-width="1"></rect>
      <circle
        cx="0"
        cy="0"
        r="2"
        fill="currentColor"
        class="text-emerald-300"
        filter="url(#glow)"></circle>
    </g>

    <!-- 3. COMPONENTES BOTÁNICOS (Hojas Mecánicas) -->
    <g id="main-leaf">
      <path
        d="M0,0 C20,-20 50,-25 70,-5 C40,15 15,10 0,0 Z"
        fill="currentColor"
        class="text-emerald-950/60"></path>
      <path
        d="M0,0 C20,-20 50,-25 70,-5 C40,15 15,10 0,0 Z"
        stroke="currentColor"
        stroke-width="1.5"
        class="text-emerald-400/80"></path>
      <path
        d="M0,0 Q35,-5 70,-5"
        stroke="currentColor"
        stroke-width="1"
        class="text-emerald-400/80"></path>
      <path
        d="M15,-2 L25,-12 M30,-4 L35,-15 M45,-4 L52,-10 M20,2 L30,12 M35,0 L45,8"
        stroke="currentColor"
        stroke-width="0.5"
        class="text-emerald-400/50"></path>
      <circle
        cx="70"
        cy="-5"
        r="1.5"
        fill="currentColor"
        class="text-emerald-300"
        filter="url(#glow)"></circle>
    </g>

    <!-- 4. NODOS DERECHOS (Cristales de Memoria) -->
    <g
      id="crystal"
      stroke="currentColor"
      class="text-emerald-400"
      stroke-linejoin="round"
    >
      <path
        d="M0,-35 L25,-15 L30,15 L0,35 L-30,15 L-25,-15 Z"
        stroke-width="1.5"
        fill="#022c22"
        fill-opacity="0.9"></path>
      <path
        d="M0,-35 L0,0 L30,15 M0,0 L-30,15 M0,0 L0,35"
        stroke-width="1"
        class="text-emerald-300/80"></path>
      <path
        d="M-25,-15 L0,0 L25,-15"
        stroke-width="0.75"
        class="text-emerald-300/60"></path>
      <circle
        cx="0"
        cy="-35"
        r="2"
        fill="currentColor"
        class="text-white/80"
        filter="url(#glow)"></circle>
    </g>

    <g id="micro-dot">
      <rect
        x="-1.5"
        y="-1.5"
        width="3"
        height="3"
        transform="rotate(45)"
        fill="currentColor"
        class="text-emerald-300"></rect>
    </g>
  </defs>

  <!-- ========================================== -->
  <!-- CAPA 0: EL MAINFRAME (TECHO / ORIGEN)      -->
  <!-- ========================================== -->
  <g class="text-emerald-500" stroke="currentColor">
    <!-- Base superior gigante -->
    <path d="M0,0 L600,0 L550,60 L50,60 Z" fill="#022c22" stroke-width="2"
    ></path>
    <path
      d="M150,60 L200,120 L400,120 L450,60 Z"
      fill="#022c22"
      stroke-width="2"></path>
    <path
      d="M250,120 L270,160 L330,160 L350,120 Z"
      fill="#064e3b"
      stroke-width="1.5"
      class="text-emerald-400"></path>

    <!-- Detalles cibernéticos del mainframe -->
    <path
      d="M50,20 h500 M100,40 h400"
      stroke-width="1"
      class="text-emerald-500/40"
      stroke-dasharray="4 8"></path>
    <circle
      cx="300"
      cy="160"
      r="5"
      fill="currentColor"
      class="text-emerald-300"
      filter="url(#glow)"></circle>
    <!-- Cables colgando del mainframe -->
    <path
      d="M180,60 V150 L150,180 V250"
      fill="none"
      stroke-width="1.5"
      class="text-emerald-500/60"></path>
    <path
      d="M420,60 V130 L460,170 V300"
      fill="none"
      stroke-width="1.5"
      class="text-emerald-500/60"></path>
  </g>

  <!-- ========================================== -->
  <!-- CAPA 1: BACKGROUND GRID Y PROFUNDIDAD      -->
  <!-- ========================================== -->
  <g class="text-emerald-500/10" stroke="currentColor" stroke-width="0.5">
    <path
      d="M0,100 L600,100 M0,200 L600,200 M0,300 L600,300 M0,400 L600,400 M0,500 L600,500 M0,600 L600,600 M0,700 L600,700 M0,800 L600,800 M0,900 L600,900"
      stroke-dasharray="2 10"></path>
    <path
      d="M100,0 L100,1100 M200,0 L200,1100 M300,0 L300,1100 M400,0 L400,1100 M500,0 L500,1100"
      stroke-dasharray="2 10"></path>
  </g>

  <!-- ========================================== -->
  <!-- CAPA 2: ENRUTAMIENTO (Cascadas de Datos)   -->
  <!-- ========================================== -->
  <g
    fill="none"
    stroke-width="1"
    class="text-emerald-500/40"
    stroke="currentColor"
  >
    <!-- Pistas de circuito tipo PCB conectando la red -->
    <path d="M300,250 L200,350 L200,400 L160,400"></path>
    <path d="M300,400 L380,480 L480,480"></path>
    <path d="M300,650 L220,730 L140,730 L140,800"></path>
    <path d="M140,400 L200,460 L300,460" stroke-dasharray="4 4"></path>
    <path d="M450,480 L350,580 L300,580" stroke-dasharray="4 4"></path>

    <!-- CASCADAS BINARIAS VERTICALES (Efecto Matrix/Lluvia de datos) -->
    <path
      d="M100,100 V300 M100,350 V600"
      stroke-dasharray="2 6"
      class="text-emerald-400/30"></path>
    <path
      d="M500,200 V500 M500,550 V850"
      stroke-dasharray="4 8"
      class="text-emerald-400/30"></path>
    <path
      d="M180,500 V900"
      stroke-dasharray="1 10"
      stroke-width="2"
      class="text-emerald-300/20"></path>
    <path
      d="M420,600 V1000"
      stroke-dasharray="1 10"
      stroke-width="2"
      class="text-emerald-300/20"></path>
  </g>

  <!-- ========================================== -->
  <!-- CAPA 3: LA RED HEXAGONAL PRINCIPAL         -->
  <!-- ========================================== -->
  <g class="text-emerald-500/30" stroke="currentColor" stroke-width="0.75">
    <use href="#hex" x="300" y="250"></use><use href="#hex" x="300" y="300"
    ></use><use href="#hex" x="300" y="350"></use>
    <use href="#hex" x="300" y="400"></use><use href="#hex" x="300" y="450"
    ></use><use href="#hex" x="300" y="500"></use>
    <use href="#hex" x="300" y="550"></use><use href="#hex" x="300" y="600"
    ></use><use href="#hex" x="300" y="650"></use>
    <use href="#hex" x="300" y="700"></use><use href="#hex" x="300" y="750"
    ></use><use href="#hex" x="300" y="800"></use>

    <!-- Ramificaciones Izquierda -->
    <use href="#hex" x="256.7" y="325"></use><use href="#hex" x="213.4" y="350"
    ></use><use href="#hex" x="170.1" y="375"></use>
    <use href="#hex" x="256.7" y="475"></use><use href="#hex" x="213.4" y="500"
    ></use><use href="#hex" x="170.1" y="475"></use>
    <use href="#hex" x="256.7" y="625"></use><use href="#hex" x="213.4" y="650"
    ></use><use href="#hex" x="170.1" y="675"></use>
    <use href="#hex" x="126.8" y="400"></use>

    <!-- Ramificaciones Derecha -->
    <use href="#hex" x="343.3" y="275"></use><use href="#hex" x="386.6" y="250"
    ></use><use href="#hex" x="429.9" y="275"></use>
    <use href="#hex" x="343.3" y="425"></use><use href="#hex" x="386.6" y="450"
    ></use><use href="#hex" x="429.9" y="475"></use>
    <use href="#hex" x="343.3" y="575"></use><use href="#hex" x="386.6" y="550"
    ></use><use href="#hex" x="429.9" y="575"></use>
    <use href="#hex" x="473.2" y="300"></use><use href="#hex" x="473.2" y="450"
    ></use>
  </g>

  <!-- ========================================== -->
  <!-- CAPA 4: TALLO CENTRAL Y HOJAS (CAYENDO)    -->
  <!-- ========================================== -->
  <!-- Vides Centrales Descendentes -->
  <g fill="none" stroke-linecap="round" stroke-linejoin="round">
    <path
      d="M300,160 Q270,400 300,700 T300,1050"
      stroke="url(#vineGrad)"
      stroke-width="4.5"></path>
    <path
      d="M292,160 Q340,300 280,450 T310,650 T280,850 T300,1000"
      stroke="currentColor"
      stroke-width="2.5"
      class="text-emerald-500/90"></path>
    <path
      d="M308,160 Q250,250 320,380 T285,580 T315,780 T300,950"
      stroke="currentColor"
      stroke-width="1.5"
      class="text-emerald-400/80"></path>
    <!-- Cables tensores mecánicos abrazando el tallo central -->
    <path
      d="M300,300 Q280,320 300,340 T300,380 T300,420"
      stroke="currentColor"
      stroke-width="0.75"
      class="text-emerald-300/60"
      stroke-dasharray="2 2"></path>
    <path
      d="M300,700 Q320,720 300,740 T300,780 T300,820"
      stroke="currentColor"
      stroke-width="0.75"
      class="text-emerald-300/60"
      stroke-dasharray="2 2"></path>
  </g>

  <!-- Hojas apuntando hacia abajo (gravedad invertida) -->
  <g>
    <use
      href="#main-leaf"
      x="300"
      y="250"
      transform="rotate(70 300 250) scale(1.1)"></use>
    <use
      href="#main-leaf"
      x="300"
      y="320"
      transform="rotate(120 300 320) scale(1.2)"></use>
    <use
      href="#main-leaf"
      x="290"
      y="480"
      transform="rotate(45 290 480) scale(0.9)"></use>
    <use
      href="#main-leaf"
      x="310"
      y="540"
      transform="rotate(160 310 540) scale(1.3)"></use>
    <use
      href="#main-leaf"
      x="295"
      y="680"
      transform="rotate(30 295 680) scale(1.1)"></use>
    <use
      href="#main-leaf"
      x="305"
      y="740"
      transform="rotate(150 305 740) scale(0.9)"></use>
    <use
      href="#main-leaf"
      x="300"
      y="850"
      transform="rotate(80 300 850) scale(0.8)"></use>
    <use
      href="#main-leaf"
      x="300"
      y="930"
      transform="rotate(110 300 930) scale(0.6)"></use>
  </g>

  <!-- ========================================== -->
  <!-- CAPA 5: CLUSTERS DE PROCESAMIENTO          -->
  <!-- ========================================== -->
  <g>
    <!-- IZQUIERDA: Chips de Procesamiento (Data-Cores) -->
    <g transform="translate(140, 330)">
      <use href="#hex-node" transform="scale(2.5)"></use>
      <use href="#hex-filled" transform="scale(1.5)" class="text-emerald-950/40"
      ></use>
      <use href="#data-core" transform="scale(1.1)"></use>
      <!-- Cable conector colgante -->
      <path
        d="M0,30 V80 L20,100"
        fill="none"
        stroke="currentColor"
        stroke-width="1"
        class="text-emerald-500/50"></path>
    </g>

    <g transform="translate(140, 500)">
      <use href="#hex-node" transform="scale(2)"></use>
      <use href="#hex-filled" transform="scale(1.2)" class="text-emerald-950/40"
      ></use>
      <use href="#data-core" transform="scale(0.9)"></use>
    </g>

    <g transform="translate(160, 700)">
      <use href="#hex-node" transform="scale(1.8)"></use>
      <use href="#data-core" transform="scale(0.7) rotate(15)"></use>
    </g>

    <!-- DERECHA: Cristales Geométricos / Bancos de Memoria -->
    <g transform="translate(460, 270)">
      <use href="#hex-node" transform="scale(2.2)"></use>
      <use href="#hex-filled" transform="scale(1.3)" class="text-emerald-950/40"
      ></use>
      <use href="#crystal" transform="scale(1.2) translate(0, 5)"></use>
    </g>

    <g transform="translate(480, 520)">
      <use href="#hex-node" transform="scale(2.5)"></use>
      <use href="#hex-filled" transform="scale(1.6)" class="text-emerald-950/40"
      ></use>
      <use href="#crystal" transform="scale(1.3) translate(0, 5)"></use>
      <!-- Satélite cristal -->
      <use
        href="#crystal"
        transform="scale(0.6) translate(-60, -50)"
        opacity="0.6"></use>
    </g>

    <g transform="translate(450, 680)">
      <use href="#hex-node" transform="scale(1.8)"></use>
      <use href="#crystal" transform="scale(0.9) translate(0, 5)"></use>
    </g>
  </g>

  <!-- ========================================== -->
  <!-- CAPA 6: EL VACÍO INFERIOR (PUNTAS)         -->
  <!-- ========================================== -->
  <!-- Las raíces ahora se desvanecen en la oscuridad hacia abajo -->
  <g
    fill="none"
    stroke="currentColor"
    stroke-linecap="round"
    class="text-emerald-500/40"
  >
    <path d="M300,1050 Q290,1080 300,1100" stroke-width="2"></path>
    <path d="M280,1000 Q260,1030 270,1060" stroke-width="1.5"></path>
    <path d="M315,950 Q330,980 320,1020" stroke-width="1"></path>
    <!-- Chispas desprendiéndose hacia el abismo -->
    <circle
      cx="300"
      cy="1080"
      r="1.5"
      class="text-emerald-300"
      fill="currentColor"
      filter="url(#glow)"></circle>
    <circle
      cx="270"
      cy="1040"
      r="1"
      class="text-emerald-400"
      fill="currentColor"></circle>
    <circle
      cx="320"
      cy="1000"
      r="1"
      class="text-emerald-400"
      fill="currentColor"></circle>
  </g>

  <!-- ========================================== -->
  <!-- CAPA 7: POLEN DIGITAL Y DESTELLOS FINALES  -->
  <!-- ========================================== -->
  <g>
    <!-- Partículas cayendo -->
    <use href="#micro-dot" x="250" y="250"></use>
    <use href="#micro-dot" x="350" y="400" transform="scale(1.5)"></use>
    <use href="#micro-dot" x="180" y="600"></use>
    <use href="#micro-dot" x="420" y="550"></use>
    <use href="#micro-dot" x="280" y="800" transform="scale(2)" opacity="0.6"
    ></use>
    <use href="#micro-dot" x="330" y="900"></use>
    <use href="#micro-dot" x="120" y="850" transform="scale(1.5)"></use>
    <use href="#micro-dot" x="480" y="950"></use>

    <!-- Chispas resplandecientes esporádicas -->
    <circle
      cx="230"
      cy="480"
      r="1.5"
      class="text-emerald-300"
      fill="currentColor"
      filter="url(#glow)"></circle>
    <circle
      cx="380"
      cy="820"
      r="1.5"
      class="text-emerald-300"
      fill="currentColor"
      filter="url(#glow)"></circle>
    <circle
      cx="450"
      cy="400"
      r="2"
      class="text-emerald-300"
      fill="currentColor"
      filter="url(#glow)"></circle>
  </g>
</svg>

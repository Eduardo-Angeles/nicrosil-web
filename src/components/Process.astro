---
import ProcessScrolled from "@components/ProcessScrolled.tsx";
import type { Step, Effect } from "@components/ProcessScrolled.tsx";

// ── Cambia el efecto aquí ──────────────────────────────────────────────
// "blink"  — aparece/desaparece con blur y contraste
// "slide"  — entra desde la derecha, sale por la izquierda
// "zoom"   — entra en escala desde el centro
const effect: Effect = "zoom";

// ── Pasos del proceso ─────────────────────────────────────────────────
// image: reemplaza con tus propias imágenes cuando estén listas
// bgLight / bgDark: color de fondo de cada paso (light / dark mode)
const steps: Step[] = [
  {
    number: "01",
    title: "Diagnóstico",
    description:
      "Entiendo tu negocio, tu audiencia y tus objetivos. Definimos el mapa del proyecto antes de escribir una sola línea de código.",
    image: "https://assets.codepen.io/197359/flower-white.png",
    bgLight: "#EAF8FC",
    bgDark:  "#071A20",
  },
  {
    number: "02",
    title: "Diseño",
    description:
      "Wireframes y diseño visual que refleja tu identidad. Apruebas cada decisión antes de pasar al desarrollo.",
    image: "https://assets.codepen.io/197359/flower-yellow.png",
    bgLight: "#E3F7F0",
    bgDark:  "#071A16",
  },
  {
    number: "03",
    title: "Desarrollo",
    description:
      "Construcción con Astro, Tailwind y las mejores prácticas de rendimiento, SEO y accesibilidad. Código limpio, sitio veloz.",
    image: "https://assets.codepen.io/197359/flower-blue.png",
    bgLight: "#E8F6EC",
    bgDark:  "#091C0E",
  },
  {
    number: "04",
    title: "Cultivo",
    description:
      "El lanzamiento es el inicio, no el final. Monitoreo, optimización continua y mejoras que mantienen tu jardín digital creciendo.",
    image: "https://assets.codepen.io/197359/flower-red.png",
    bgLight: "#EDF5E2",
    bgDark:  "#101C07",
  },
];
---

<ProcessScrolled steps={steps} effect={effect} client:load />
